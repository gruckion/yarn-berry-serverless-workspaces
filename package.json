{
  "name": "serverless-workspaces-pnp",
  "version": "1.0.0",
  "description": "Mono repo for serverless-workspaces-pnp",
  "license": "MIT",
  "author": "Gruckion",
  "workspaces": [
    "packages/*",
    "lambdas/*"
  ],
  "scripts": {
    "compile": "yarn fix-project-references-all && tsc --build",
    "deploy": "yarn workspaces foreach --parallel --interlaced --include \"@gruckion/lambda*\" run deploy",
    "destroy": "yarn workspaces foreach --parallel --interlaced --include \"@gruckion/lambda*\" run destroy",
    "fix-project-references": "utils-typescript-references --skipRoot",
    "fix-project-references-all": "utils-typescript-references",
    "format": "prettier --loglevel log --config .prettierrc.json --write .",
    "format-check": "prettier --loglevel log --config .prettierrc.json --check .",
    "lint": "eslint . --ext .js,.ts,.tsx,.json,.yml,.yaml",
    "lint-fix": "eslint . --ext .js,.ts,.tsx,.json,.yml,.yaml --fix",
    "package": "yarn workspaces foreach --parallel --interlaced --include \"@gruckion/lambda*\" run package",
    "package:doctor": "yarn dlx @yarnpkg/doctor ."
  },
  "devDependencies": {
    "@goldstack/utils-typescript-references": "0.3.2",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "esbuild-loader": "^2.20.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-yaml": "^0.5.0",
    "path": "^0.12.7",
    "pnp-webpack-plugin": "^1.7.0",
    "prettier": "^2.7.1",
    "serverless-webpack": "^5.9.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0"
  },
  "packageManager": "yarn@3.2.3"
}
